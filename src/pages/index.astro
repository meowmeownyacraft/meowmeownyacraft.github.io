---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import ServerWidget from "../components/ServerWidget.astro";
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION, MAIN_IP } from "../consts";
import favicon from "../../public/favicon.png";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body
        class="bg-main bg-cover bg-fixed bg-center dark:bg-gray-950 backdrop-blur-sm min-h-[100vh]"
    >
        <Header />
        <main class="text-slate-200 mx-auto mt-12">
            <Image
                src={favicon}
                alt=""
                class="mx-auto max-w-64 object-contain"
                loading="eager"
            />

            <p
                class="my-12 text-center [text-shadow:_0_0_1em_rgb(0_0_0_/_80%)] text-base font-bold"
            >
                'mmnc' stands for meowmeownyacraft. It's a new minecraft server,
                where our goal is to enhance the vanilla experience with fun
                stuff and make it comfy :3
            </p>
            <ServerWidget />
        </main>
    </body>
</html>
