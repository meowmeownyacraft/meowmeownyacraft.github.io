---
import ServerWidget from "../components/ServerWidget.astro";
import Layout from "../layouts/Main.astro";
import Nav from "../components/Nav.astro";

const today = new Date();
---

<Layout title="meowmeownyacraft" description="meow!">
    <main class="text-slate-200 mx-auto mt-12 px-8 max-w-3xl">
        <a href="/">
            <img
                src="/logo.svg"
                alt=""
                class="mx-auto w-96 h-auto object-contain"
                loading="eager"
            />
        </a>

        <Nav />

        <p
            class="my-12 text-center [text-shadow:_0_0_1em_rgb(0_0_0_/_95%)] text-base"
        >
            'mmnc' stands for meowmeownyacraft. It's a minecraft server, where
            our goal is to enhance the vanilla experience with fun stuff and
            make it comfy :3
        </p>
        <ServerWidget />
    </main>
    <footer class="text-slate-300 text-center p-8 w-full bottom-0">
        &copy; {today.getFullYear()} meowmeownyacraft

        <a
            href="https://github.com/meowmeownyacraft"
            target="_blank"
            class="text-slate-50/50 max-w-max block mx-auto my-4"
        >
            <span class="sr-only">Our Github</span>
            <svg
                viewBox="0 0 16 16"
                aria-hidden="true"
                width="32"
                height="32"
                astro-icon="social/github"
                ><path
                    fill="currentColor"
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                ></path></svg
            >
        </a>
    </footer>
    <img src="/walls/screenshot-home.png" alt="" class="fixed w-[100vw] h-[100vh] top-0 object-cover -z-20 blur-sm brightness-75">
</Layout>
